
[cpu_usage]
command=$HOME/.config/i3blocks/scripts/cpu_usage/cpu_usage
interval=persist

[mem_usage]
command=$HOME/.config/i3blocks/scripts/$BLOCK_NAME
interval=4

[wireless]
label=ï‡« =
# iwconfig wlan0 OR iw dev wlan0 link
command=[[ -z "$(iwgetid -r)" ]] || awk '/^\s*wl/ { print int($3 * 100 / 70) "%" }' /proc/net/wireless
interval=10

[volume]
command=scripts/vol_pulseaudio.sh -F '${SYMB} =${VOL}%'
signal=10
interval=once

[date_time]
command=date "+%a %d %b, <b>%H:%M</b> "
markup=pango
interval=15
