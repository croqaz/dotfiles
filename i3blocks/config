
[cpu_usage]
command=$HOME/.local/scripts/cpu_usage/cpu_usage -l '<big>❖</big>' -s ''
interval=persist
markup=pango

[mem_usage]
command=$HOME/.local/scripts/mem_usage.sh
markup=pango
interval=2

[wireless]
command=$HOME/.local/scripts/wifi_strength.sh
markup=pango
interval=10

[volume]
command=$HOME/.local/scripts/vol_pulseaudio.sh -F '${SYMB} ${VOL}%'
interval=10
signal=10

[date_time]
command=date "+%a %d %b&#183;%H:%M "
markup=pango
interval=15
