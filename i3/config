# i3 config file (v4)
# Template: https://github.com/i3/i3/blob/stable/etc/config
# Reference: https://i3wm.org/docs/userguide.html

# mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# define some vars
set $term --no-startup-id alacritty
set $left h
set $down j
set $up k
set $right l

focus_follows_mouse no
focus_on_window_activation urgent

# Define names for default workspaces
# Use vars to avoid repeating the names in multiple places
set $ws1 "1 ❱"
set $ws2 "2 ❱"
set $ws3 "3 ❱"
set $ws4 "4 ❱"
set $ws5 "5 ❱"
set $ws6 "6 ❱"
set $ws7 "7 ❱"
set $ws8 "8 ❱"
set $ws9 "9 ❱"

# --- Key Bindings --- #

# change focus, VI style
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

# alt + tab focus windows
bindsym Mod1+Tab focus next
bindsym Mod1+Shift+Tab focus prev

# focus the parent container
#bindsym $mod+a focus parent
# focus the child container
#bindsym $mod+d focus child
# toggle between floating/tiling containers
#bindsym $mod+s focus mode_toggle

# move focused window, VI style
bindsym $mod+Shift+$left  move left
bindsym $mod+Shift+$down  move down
bindsym $mod+Shift+$up    move up
bindsym $mod+Shift+$right move right

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

# workspace navigation
bindsym $mod+Tab      workspace back_and_forth
bindsym $mod+less     workspace prev
bindsym $mod+greater  workspace next

# fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# use Mouse+$mod to drag floating windows
floating_modifier $mod
# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# toggle tiling / sticky
# bindsym $mod+Shift+s sticky toggle

# change container layout (tabbed, toggle split)
bindsym $mod+w layout toggle tabbed splith
bindsym $mod+e layout toggle split

# toggle split orientation (horizontal, vertical)
bindsym $mod+semicolon   split toggle
bindsym $mod+v           split vertical
bindsym $mod+b           split horizontal
bindsym $mod+apostrophe  split horizontal ;; exec $term
bindsym $mod+slash       split vertical ;; exec $term

# change gaps between windows (requires i3-gaps)
bindsym $mod+z        gaps inner current plus 5
bindsym $mod+Shift+z  gaps inner current minus 5
bindsym $mod+Mod1+z   gaps inner current set 0; gaps outer current set 0

bindsym $mod+t        bar mode toggle

# kill focused window
bindsym $mod+q        kill
bindsym $mod+Shift+q  exec kill --no-startup-id -9 $(xdotool getwindowfocus getwindowpid)

# reload the configuration file
bindsym $mod+Shift+c  reload
# restart i3 inplace  (preserves layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r  restart

# resize window (you can also use the mouse for that)
mode "resize" {
  # these trigger as soon as you enter the resize mode
  bindsym $left   resize shrink width 5 px or 5 ppt
  bindsym $down   resize grow height 5 px or 5 ppt
  bindsym $up     resize shrink height 5 px or 5 ppt
  bindsym $right  resize grow width 5 px or 5 ppt

  # back to normal: Enter or Escape or r
  bindsym Return  mode "default"
  bindsym Escape  mode "default"
  bindsym $mod+r  mode "default"
  bindsym r       mode "default"
}
bindsym $mod+r mode "resize"

set $mode_system System (l) lock, (o) logout, (s) suspend, (h) hibernate, (r) reboot, (u) shutdown
set $locker i3lock -be -c 303030
mode "$mode_system" {
  bindsym l exec --no-startup-id $locker, mode "default"
  bindsym o exec --no-startup-id i3-msg exit, mode "default"
  bindsym s exec --no-startup-id $locker && systemctl suspend, mode "default"
  bindsym h exec --no-startup-id $locker && systemctl hibernate, mode "default"
  # Must allow regular users to execute reboot and poweroff
  bindsym r exec --no-startup-id systemctl reboot, mode "default"
  bindsym u exec --no-startup-id systemctl poweroff -i, mode "default"

  # back to normal: Enter or Escape or Space
  bindsym Return  mode "default"
  bindsym Escape  mode "default"
  bindsym Space   mode "default"
}
bindsym $mod+Escape mode "$mode_system"

# disable window borders?
# for_window [class=".*"] border pixel 0

# set floating windows
for_window [window_role="bubble"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
#
for_window [window_role="(?i)preferences$"] floating enable
#
for_window [class="(?i)firefox" window_role="About"] floating enable
for_window [class="(?i)pavucontrol"] floating enable

# --- Beautify --- #

font pango:JetBrainsMono Nerd Font Bold 12

gaps inner 10
gaps outer 10

# https://github.com/a-schaefers/i3-wm-gruvbox-theme/
# Gruvbox colorscheme colors
set $bg     #282828
set $red    #cc241d
set $green  #98971a
set $yellow #d79921
set $blue   #458588
set $purple #b16286
set $aqua   #689d68
set $gray   #a89984
set $darkgray #1d2021

# class                 border    backgr    text      indicator child_border
client.focused          $aqua     $aqua     $darkgray $purple   $darkgray
client.focused_inactive $darkgray $darkgray $yellow   $purple   $darkgray
client.unfocused        $darkgray $darkgray $yellow   $purple   $darkgray
client.urgent           $red      $red      $white    $red      $red

# --- Status Bar --- #

bar {
  status_command i3blocks
  position top
  workspace_buttons yes
  font pango:JetBrainsMono Nerd Font, Font Awesome 5 Free 12

  colors {
    # bar bg color
    background $bg
    # text color used for blocks that don't have a color specified
    statusline $yellow
    #                  border    backgr    text
    focused_workspace  $blue     $blue     $darkgray
    inactive_workspace $darkgray $darkgray $yellow
    active_workspace   $darkgray $darkgray $yellow
    urgent_workspace   $red      $red      $bg
  }
}

# Start the rest of the apps

exec --no-startup-id exec xrandr --output HDMI-0 --mode 1920x1080 --rate 120
exec --no-startup-id exec xset dpms 60 60 300
exec --no-startup-id exec xss-lock -- $locker

exec --no-startup-id exec sxhkd -m 1
exec --no-startup-id exec picom -CGb
exec --no-startup-id exec dunst
exec --no-startup-id exec xwallpaper --output HDMI-0 --zoom $HOME/Pictures/wall.jpg
