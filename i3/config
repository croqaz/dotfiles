# i3 config file (v4)
# Template: https://github.com/i3/i3/blob/stable/etc/config
# Reference: https://i3wm.org/docs/userguide.html
# Inspiration: https://github.com/regolith-linux/regolith-i3-gaps-config

# mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4
set $meh Control+Shift

# define some vars
set $term --no-startup-id kitty -1

focus_follows_mouse no
force_display_urgency_hint 500 ms
focus_on_window_activation smart
focus_wrapping yes

# Define names for default workspaces
# Use vars to avoid repeating the names in multiple places
set $ws1 "1:1 ❱"
set $ws2 "2:2 ❱"
set $ws3 "3:3 ❱"
set $ws4 "4:4 ❱"
set $ws5 "5:5 ❱"
set $ws6 "6:6 ❱"
set $ws7 "7:7 ❱"
set $ws8 "8:8 ❱"
set $ws9 "9:9 ❱"

# --- New Key Bindings --- #

# change focus using arrows
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

# focus the parent container
bindsym $mod+a focus parent
# focus the child container
bindsym $mod+d focus child

# alt + tab focus windows inside workspace
bindsym Mod1+Tab focus prev
bindsym Mod1+Shift+Tab focus next

# move focused window using arrows
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

# switch to specific workspace
bindsym $mod+q workspace $ws1
bindsym $mod+w workspace $ws2
bindsym $mod+e workspace $ws3
bindsym $mod+r workspace $ws4
bindsym $mod+t workspace $ws5
bindsym $mod+y workspace $ws6
bindsym $mod+u workspace $ws7
bindsym $mod+i workspace $ws8
bindsym $mod+o workspace $ws9

# move focused container to workspace
bindsym $mod+Shift+q move container to workspace $ws1
bindsym $mod+Shift+w move container to workspace $ws2
bindsym $mod+Shift+e move container to workspace $ws3
bindsym $mod+Shift+r move container to workspace $ws4
bindsym $mod+Shift+t move container to workspace $ws5
bindsym $mod+Shift+y move container to workspace $ws6
bindsym $mod+Shift+u move container to workspace $ws7
bindsym $mod+Shift+i move container to workspace $ws8
bindsym $mod+Shift+o move container to workspace $ws9

# workspace navigation
bindsym $mod+Tab      workspace back_and_forth
bindsym $mod+less     workspace prev
bindsym $mod+greater  workspace next

# multi monitor moving workspaces
bindsym $mod+Home move workspace to output left
bindsym $mod+End  move workspace to output right

# fullscreen mode for focused container
bindsym $mod+f fullscreen toggle

# use Mouse+$mod to drag floating windows
floating_modifier $mod
# toggle window tiling / floating
bindsym $mod+Control+f floating toggle
# focus toggle between floating / tiling
bindsym $mod+Shift+f  focus mode_toggle

# change container layout (tabbed, toggle split)
bindsym $mod+x layout toggle tabbed split
bindsym $mod+s layout toggle split

# toggle split orientation (vertical, horizontal)
bindsym $mod+semicolon  split toggle
bindsym $mod+v          split vertical
bindsym $mod+b          split horizontal

# toggle i3 bar
bindsym $mod+Control+t  bar mode toggle

# change gaps between windows (requires i3-gaps)
bindsym $mod+plus   gaps inner current plus 5
bindsym $mod+minus  gaps inner current minus 5
bindsym $mod+0      gaps inner current set 0; gaps outer current set 0

# kill focused window
bindsym $meh+q       [con_id="__focused__"] kill
bindsym $meh+$mod+q  [con_id="__focused__"] exec --no-startup-id \
        kill -9 $(xdotool getwindowfocus getwindowpid)

# reload the configuration file
bindsym $meh+$mod+c  reload
# restart i3 inplace (preserves layout/session, can be used to upgrade i3)
bindsym $meh+$mod+r  restart

# resize window (you can also use the mouse for that)
mode "resize" {
  # these trigger as soon as you enter the resize mode
  bindsym Left   resize shrink width 5 px or 5 ppt
  bindsym Down   resize grow height 5 px or 5 ppt
  bindsym Up     resize shrink height 5 px or 5 ppt
  bindsym Right  resize grow width 5 px or 5 ppt

  # back to normal
  bindsym Control+C mode "default"
  bindsym Return    mode "default"
  bindsym Escape    mode "default"
  bindsym z         mode "default"
}
bindsym $mod+Shift+z mode "resize"

# --- Organize --- #

exec --no-startup-id "$HOME/.local/scripts/monitors.sh --pe && $HOME/.local/scripts/monitors.sh --ei"
exec --no-startup-id "xrandr --output $EXTERN_SCREEN --mode 1920x1080 --rate 120"

assign [class="(?i)firefox"]   $ws2
assign [class="(?i)chromium"]  $ws9

floating_maximum_size -1 x -1

# set floating windows
for_window [window_role="bubble"] floating enable
for_window [window_role="(?i)pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="(?i)about"] floating enable
for_window [window_role="(?i)preferences$"] floating enable
#
for_window [window_type="dialog"] border pixel 2
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] border pixel 2
for_window [window_type="menu"] floating enable
#
for_window [class="Yad" instance="yad"] floating enable
for_window [class="(?i)firefox" window_role="About"] floating enable
for_window [class="(?i)pavucontrol"] floating enable
for_window [class="(?i)zoom"]       floating enable
for_window [title="Volume Control"] floating enable

# --- Beautify --- #

hide_edge_borders vertical

for_window [class="^Emacs"] border pixel 0
for_window [class="^kitty"] border pixel 1
for_window [class="^Alacritty"] border pixel 1

font pango:JetBrainsMono Nerd Font Bold 10

gaps inner 8
gaps outer 4

# https://github.com/a-schaefers/i3-wm-gruvbox-theme/
# Gruvbox colorscheme colors
set $bg     #282828
set $red    #cc241d
set $green  #98971a
set $yellow #d79921
set $blue   #458588
set $purple #b16286
set $aqua   #689d68
set $gray   #a89984
set $darkgray #1d2021

# class                 border    backgr    text      indicator child_border
client.focused          $aqua     $aqua     $darkgray $purple   $darkgray
client.focused_inactive $darkgray $darkgray $yellow   $purple   $darkgray
client.unfocused        $darkgray $darkgray $yellow   $purple   $darkgray
client.urgent           $red      $red      $white    $red      $red

# --- Status Bars --- #

bar {
  position top
  tray_output primary
  separator_symbol ":|:"
  font pango:JetBrainsMono Nerd Font 12
  status_command i3blocks
  strip_workspace_numbers yes

  colors {
    # bar bg color
    background $bg
    # text color used for blocks that don't have a color specified
    statusline $yellow
    #                  border    backgr    text
    focused_workspace  $blue     $blue     $darkgray
    inactive_workspace $darkgray $darkgray $yellow
    active_workspace   $darkgray $darkgray $yellow
    urgent_workspace   $red      $red      $bg
  }
}

# Start the rest of the apps

# Turn off screen after X seconds and faster key repeat
exec_always --no-startup-id "xset dpms 180 180 300  &&  xset r rate 400 40"
# Keyboard layout
exec --no-startup-id "setxkbmap -model pc101 -layout us -variant altgr-intl -option -option lv3=ralt_switch -option compose=rctrl -option terminate=ctrl_alt_bksp"

exec --no-startup-id "sxhkd -m 1"
exec_always --no-startup-id "picom -b"
exec_always --no-startup-id "udiskie"
# exec_always --no-startup-id "systemctl --user restart dunst"

# Setup lock screen and wallpaper
exec --no-startup-id "xss-lock -- $HOME/.local/scripts/lock2.sh"
exec_always --no-startup-id "xwallpaper --zoom $HOME/Pictures/wall.jpg"

# Warm screen at night (Dublin Ireland)
# exec --no-startup-id "redshift -l 53.356:-6.243"
