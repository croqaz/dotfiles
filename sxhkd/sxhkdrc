# Simple X Hotkey Daemon cfg
# https://github.com/baskerville/sxhkd

# Reload sxhkd config
control + alt + k
	kill -SIGUSR1 $(pidof sxhkd) && notify-send "SXHKD config reloaded"

# Requires i3-lock-color
super + Escape
	i3lock -be -c 303030 --insidecolor=30303030 --blur 9 --clock --indicator --datestr="%Y-%m-%d" --timestr="%H:%M:%S"

super + space
	j4-dmenu-desktop --dmenu="dmenu -i -fn Hack-11"

super + Return
	alacritty

super + shift + Return
	kitty

super + shift + w
	firefox

super + shift + m
	thunderbird

super + shift + g
	atom

super + shift + n
	alacritty -e lf

super + shift + i
	alacritty -e htop

super + shift + i
	alacritty -e ipython

# Toggle master output sound
XF86AudioMute
	amixer sset Master toggle; pkill -RTMIN+10 blocks

# Lower/ Raise volume of current audio stream
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
	amixer sset Master 5%{+,-}; pkill -RTMIN+10 blocks

