# Simple X Hotkey Daemon cfg
# https://github.com/baskerville/sxhkd

# Reload sxhkd config
control + alt + k
	kill -SIGUSR1 $(pidof sxhkd) && notify-send "SxHkD config reloaded"

super + space
	j4-dmenu-desktop --dmenu="dmenu -i -fn 'JetBrainsMono Nerd Font-14'"

super + Return
	kitty --single-instance

super + shift + Return
	alacritty

super + shift + w
	firefox

super + shift + m
	thunderbird

super + shift + g
	atom

super + shift + n
	kitty -1 -e nnn

super + shift + i
	kitty -1 -e htop

super + shift + y
	kitty -1 -e ipython

@Print
	scrot -q 85 -e 'mv $f ~/Pictures/' && notify-send "Screenshot saved"

shift + @Print
	scrot -q 90 -bu -e 'mv $f ~/Pictures/' && notify-send "Focused window saved"

super + x
	flash_window # flashfocus

# Toggle master output sound
XF86AudioMute
    amixer sset Master toggle; pkill -RTMIN+10 blocks

# Raise/ Lower volume of current audio stream
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
    amixer sset Master 5%{+,-}; pkill -RTMIN+10 blocks

# Increase/ Decrease laptop screen brightness
{XF86MonBrightnessUp,XF86MonBrightnessDown}
    xbacklight -{inc,dec} 10 -steps 5 -time 1000

# XF86AudioPlay playerctl play
# XF86AudioStop playerctl stop
# XF86AudioPause playerctl pause
# XF86AudioPrev playerctl previous
# XF86AudioNext playerctl next
