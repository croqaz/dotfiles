# Simple X Hotkey Daemon cfg
# https://github.com/baskerville/sxhkd

# Reload sxhkd config
control + alt + k
	kill -SIGUSR1 $(pidof sxhkd) && notify-send "SXHKD config reloaded"

super + space
	j4-dmenu-desktop --dmenu="dmenu -i -fn Hack-11"

super + Return
	alacritty

super + shift + Return
	kitty --single-instance

super + shift + w
	firefox

super + shift + m
	thunderbird

super + shift + g
	atom

super + shift + n
	alacritty -e lf

super + shift + i
	alacritty -e htop

super + shift + i
	alacritty -e ipython

@Print
	scrot -e 'mv $f ~/Pictures/' && notify-send "Screenshot saved"

# Toggle master output sound
XF86AudioMute
    amixer sset Master toggle; pkill -RTMIN+10 blocks

# Raise/ Lower volume of current audio stream
{XF86AudioRaiseVolume,XF86AudioLowerVolume}
    amixer sset Master 5%{+,-}; pkill -RTMIN+10 blocks

# Increase/ Decrease laptop screen brightness
{XF86MonBrightnessUp,XF86MonBrightnessDown}
    xbacklight -{inc,dec} 10 -steps 5 -time 1000

